block content
    include ../pages/full_screen_menu
    include ../common/heder


    section.section.about
        .about__left
            svg(
                viewbox ="0 0 1000 100"
                preserveAspectRatio = "none"
                class="triangle triangle_fill_white about__triangles"
                )
                polygon(points="0,0 0,1000, 1000,100")

            //- Дописать подложку
            .about__section-title
                //- Для макета forest
                //-+title('Обо мне', 'about-header1.png', 'about__section-title', '48px')
                +title('Обо мне', 'about-header.png', 'about__section-title', '63px')
                //-+title('Новый заголовок!', 'works-header1.png')
                //.title(style="background-image: url('img/decor/about-heder.png')").about__section-title
                //-.title.about__section-title
                    | Обо мне
            .user-about
                .user-about__picture
                    //-img(src="./assets/img/content/my_about.jpg", alt="").about__photo
                    img(src="./assets/img/content/about.jpg", alt="").about__photo
                    //img(src="./assets/img/content/my_about_1.jpg", alt="").about__photo
                //.user-about__title
                +title('Кто Я','' , 'user-about__title', '30px')
                    //-.subtitle
                        | Кто Я
